<Window x:Class="ProgettoPDS.Home_window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Home_window" Height="600" Width="600">
    <!--Viewbox-->
    <DockPanel> 
        <!--permette di ancorare il menu in alto-->

        <Menu DockPanel.Dock="Top" Height="25" VerticalAlignment="Top" >
            <MenuItem Header="Folder">
                <MenuItem Header="Add Folder "  IsEnabled="True" Click="add_folder">
                </MenuItem>
                <MenuItem Header="View Folders" Click="view_folder">
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Settings">
                <MenuItem Header="Change N. copy">
                </MenuItem>
                <MenuItem Header="Change time synchronization">
                    </MenuItem>

            </MenuItem>
            <MenuItem Header="Exit">

            </MenuItem>
        </Menu>
        <Label x:Name="welcome_label" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" Width="132" RenderTransformOrigin="1.179,0.962" Margin="27,30,0,0" Grid.Row="1" Height="34"  />

        <ContentControl x:Name="MyContentControl">

        </ContentControl>
    </DockPanel>

</Window>
